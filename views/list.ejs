<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DreamTalk</title>
  </head>
  <body>
    <%-include('nav.ejs') %>
    <h1>게시글 리스트</h1>
    <%for(let i = 0; i < posts.length; i++){%>
    <div>
      <h4><a href="/detail/<%=posts[i].post_id%>"><%=posts[i].title%></a></h4>
      <% if(posts[i].user_id == user){ %>
      <button class="delete" data-id="<%=posts[i].post_id%>">삭제</button>
      <button><a href="/update/<%=posts[i].post_id%>">수정</a></button>
      <%}%>
    </div>
    <%}%>

    <script>
      let deletes = document.querySelectorAll(".delete");
      for (let i = 0; i < deletes.length; i++) {
        deletes[i].addEventListener("click", function (e) {
          fetch("/delete?docid=" + e.target.dataset.id, {
            method: "DELETE",
          })
            .then((r) => r.json())
            .then((r) => {
              (e.target.parentElement.style.display = "none"), console.log(r);
            })
            .then(() => {
              alert("삭제 완료");
            });
        });
      }
    </script>
  </body>
</html>
